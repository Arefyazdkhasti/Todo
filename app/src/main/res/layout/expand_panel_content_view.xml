<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/expand_bg_color">

    <LinearLayout
        android:id="@+id/title_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title        "
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="@color/expand_title_color"/>

        <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg_2"
            android:textAlignment="center"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cat_layer"
        android:layout_below="@id/title_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="@color/expand_title_color"/>

        <EditText
            android:id="@+id/category_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg_2"
            android:textAlignment="center"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pro_layer"
        android:layout_below="@id/cat_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority   "
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="@color/expand_title_color"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="low"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="medium"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="high"
                android:textColor="@color/black"/>
        </RadioGroup>
    </LinearLayout>


    <Button
        android:id="@+id/cancel_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/pro_layer"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:textSize="10sp"
        android:layout_toLeftOf="@id/save_change_btn"
        android:textColor="@color/black"
        android:background="@color/white"/>

    <Button
        android:id="@+id/save_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/pro_layer"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="Save"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@color/expand_title_color"/>

</RelativeLayout>